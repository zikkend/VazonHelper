<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#53AD61">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/dataCalendar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="Виберіть дату"
            android:textSize="14sp" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#27E3A0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etsetevent"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/btaddevent"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_span="1"
                    android:background="@drawable/button_style"
                    android:onClick="onClick1"
                    android:text="Додати"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btdelevent"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_span="2"
                    android:background="@drawable/button_style"
                    android:onClick="onClick1"
                    android:text="Видалити" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/chbox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Включити сповіщення" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Повторювати кожні" />

                <EditText
                    android:id="@+id/kilday"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="днів" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvviewevent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Button
            android:id="@+id/btgetevent"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:background="@drawable/button_style"
            android:onClick="onClick1"
            android:text="Переглянути події" />

    </LinearLayout>
</ScrollView>